<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#000</item>
    </style>

    <style name="previous_results_search_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/previous_results_search_title</item>
    </style>

    <style name="searchTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">#FFF</item>
        <item name="tabTextAppearance">@style/searchTabLayoutText</item>
    </style>

    <style name="searchTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/searchTabLayoutTextColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
